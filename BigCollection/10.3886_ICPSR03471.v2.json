tadata","fields":[{"typeName":"universe","multiple":true,"typeClass":"primitive","value":["United States religious congregations."]},{"typeName":"samplingProcedure","multiple":false,"typeClass":"primitive","value":"A representative sample of United States congregations was collected using a hypernetwork sampling technique. Respondents to the 1998 and the 2006 General Social Survey (GSS) who said they attend religious services at least once a year were asked to name the congregation at which they attended religious services. The congregations nominated by these respondents comprise the NCS sample."},{"typeName":"collectionMode","multiple":false,"typeClass":"primitive","value":"face-to-face interview"},{"typeName":"weighting","multiple":false,"typeClass":"primitive","value":"Eight weights are included in the cumulative NCS data set and two weighting variables are contained in the panel data set. Please see Appendix A of the codebook for a description of weights."},{"typeName":"cleaningOperations","multiple":false,"typeClass":"primitive","value":"Checked for undocumented or out-of-range codes."},{"typeName":"responseRate","multiple":false,"typeClass":"primitive","value":"Wave I (80 percent) Wave II (78 percent)"}]}},"files":[{"description":"","label":"Cumulative (1998 and 2006-07) Cross-Sectional Data File","restricted":false,"version":1,"datasetVersionId":37201,"dataFile":{"id":2625261,"persistentId":"","pidURL":"","filename":"Cumulative (1998 and 2006-07) Cross-Sectional Data File","contentType":"data/various-formats","filesize":0,"description":"","storageIdentifier":"","rootDataFileId":-1,"md5":"","checksum":{"type":"MD5","value":""}}},{"description":"","label":"Panel (2006-07) Data File","restricted":false,"version":1,"datasetVersionId":37201,"dataFile":{"id":2625262,"persistentId":"","pidURL":"","filename":"Panel (2006-07) Data File","contentType":"data/various-formats","filesize":0,"description":"","storageIdentifier":"","rootDataFileId":-1,"md5":"","checksum":{"